    }
    $grafico_por_tipo['options'] = $opciones_jcarousel;
    $elemento_grafico_por_tipo = theme('jcarousel', $grafico_por_tipo);

    

    $medio = theme('html_tag', array(
      'element' => array(
        '#tag' => 'div',
        '#attributes' => array(
          'id' => 'tab-medio',
          'class' => 'tabs'
          ),
        '#value' => $elemento_grafico_por_tipo,
      ),
    ));
  }




  $graficos = theme('html_tag', array(
    'element' => array(
      '#tag' => 'div',
